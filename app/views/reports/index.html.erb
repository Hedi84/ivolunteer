<div class="reports-banner col-xs-12 col-sm-12 col-md-12" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.1)), url(<%= image_path('laptop.jpeg'); %>)">
  <div class="text-index">
    <p>Reports</p>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="reports col-xs-12 col-sm-12 col-md-6">
       <div class="reports-text-top">
          <p>Your Reports</p>
        </div>
        <% @reports.each do |report| %>
     <!--  <div class="container">
        <div class="row"> -->
          <!-- <div class="col-sm-12"> -->

             <div class="report-card">
              <div class="card-delete">
                <%= link_to "x", destroy_report_path(report[:id]), method: :delete, data: { confirm: 'Are you sure you want to delet this report? (Remembe that all connected notes will be lost!)' } %>
              </div>
              <div class="card-edit hidden-sm">
              <div class="card-edit-small hidden-md">
                <%= link_to report_path(report.id) do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </div>
              </div>
              <div class="card-month">
                <h1>Report for: <%= report.month.strftime("%m/%Y") %> </h1>
                <p>This report currently consists of <%= pluralize(report.notes.count.to_i, 'note') %> </p>
              </div>
            </div>
        <% end %>
       <!--    </div> -->
     <!--    </div>
      </div> -->
    </div>
    <div class="row">
      <div class="reports-form col-xs-12 col-sm-12 col-md-6">
        <!-- <div class="row col-sm-12"> -->
          <div class="my-form">
            <p>Create a new Report</p>
            <%= simple_form_for @report do |f|%>
              <%= f.input :month, as: :date,  discard_day: true %>
              <%= f.submit 'create report', :class => 'button ' %>
            <% end %>
            </div>
          <!-- </div> -->
        </div>

    </div>

    </div>
</div>









