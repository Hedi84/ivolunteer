
<div class="edit-flex">

  <div class="edit-left">
    <p>Edit This Note:</p>
    <div class="edit-form">
      <%= simple_form_for [@report, @note] do |f| %>
          <%= f.input :title %>
          <%= f.input :description %>
          <%= f.input :time %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit 'Edit note', :class => 'note-button' %>
      <% end %>

    </div>


  </div>

  <div class="edit-right">
    <p>Uploaded Photo: </p>
    <%= cl_image_tag @note.photo, height: 300, width: 400, crop: :fill %>
  </div>

</div>

  <%= link_to note_path(@note), method: :delete, data: { confirm: 'Are you sure you want to delete this note? (Remember that it will be lost!)' } do %>
      <div class="delete-button">Delete this Note</div>
      <% end %>



